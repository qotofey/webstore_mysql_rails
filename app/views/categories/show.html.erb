<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @category.slug %>
</p>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Info</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @category.fields.each do |category_field| %>
    <tr>
      <td><%= category_field.name %></td>
      <td><%= category_field.type %></td>
      <td><%= category_field.info %></td>
      <td><%= link_to 'Show', category_field %></td>
      <td><%= link_to 'Edit', edit_category_field_path(category_field) %></td>
      <td><%= link_to 'Destroy', category_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
