<p id="notice"><%= notice %></p>

<h1>User Roles</h1>

<table>
  <thead>
    <tr>
      <th>Position</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_roles.each do |user_role| %>
      <tr>
        <td><%= user_role.position %></td>
        <td><%= user_role.user_id %></td>
        <td><%= link_to t('action.show'), user_role %></td>
        <td><%= link_to t('action.edit'), edit_user_role_path(user_role) %></td>
        <td><%= link_to t('action.destroy'), user_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Role', new_user_role_path %>
