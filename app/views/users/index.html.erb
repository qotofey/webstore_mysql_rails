<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= link_to 'New User', new_user_path %>
<br>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th><%= t('activerecord.attributes.user.first_name') %></th>
      <th><%= t('activerecord.attributes.user.middle_name') %></th>
      <th><%= t('activerecord.attributes.user.last_name') %></th>
      <th><%= t('activerecord.attributes.user.phone') %></th>
      <th><%= t('activerecord.attributes.user.promo') %></th>
      <th><%= t('activerecord.attributes.user.gender') %></th>
      <th><%= t('activerecord.attributes.user.birth_date') %></th>
      <th><%= t('activerecord.attributes.user.deleted_at') %></th>
      <th><%= t('activerecord.attributes.user.blocked_at') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.middle_name %></td>
        <td><%= user.last_name %></td>
        <td>+<%= user.phone %></td>
        <td><%= user.promo %></td>
        <td><%= t("user.gender.#{user.gender || :void}") %></td>
        <td><%= user.birth_date %></td>
        <td><%= user.deleted_at %></td>
        <td><%= user.blocked_at %></td>
        <td><%= link_to t('action.show'), user %></td>
        <td><%= link_to t('action.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('action.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
